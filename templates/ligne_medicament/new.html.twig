{% extends 'base.html.twig' %}

{% block title %}New Ligne Medicament{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Pharmacie</a>
        <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('ligne_medicament_index') }}">Ligne Medicament</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <h1>New Ligne Medicament</h1>
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {
                    'attr': {
                        'class': 'form-horizontal',
                        'id': 'new-ligne-medicament-form'
                    }
                }) }}
                    <div class="form-group row">
                        <label
                            for="{{ form.medicament.vars.id }}"
                            class="col-sm-2 col-form-label font-weight-bold"
                        >
                            {{ form_label(form.medicament) }}
                        </label>
                        <div class="col-sm-10">
                            {{ form_widget(form.medicament, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.medicament) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label
                            for="{{ form.numLigne.vars.id }}"
                            class="col-sm-2 col-form-label font-weight-bold"
                        >
                            {{ form_label(form.numLigne) }}
                        </label>
                        <div class="col-sm-10">
                            {{ form_widget(form.numLigne, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.numLigne) }}
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
            <div class="card-footer text-right">
                <button
                    form="new-ligne-medicament-form"
                    type="submit"
                    class="btn btn-primary"
                >
                    Save
                </button>
                <a
                    href="{{ path('ligne_medicament_index') }}"
                    class="btn btn-secondary ml-2"
                >
                    Back to list
                </a>
            </div>
        </div>
    </div>
{% endblock %}
